{
  "name": "Go Dev Container",

  // Especifica la ruta relativa del archivo docker-compose.yml
  "dockerComposeFile": "../config/docker-compose.yml",

  // Nombre del servicio a utilizar como entorno de desarrollo dentro del contenedor
  "service": "sdk",

  // Carpeta de trabajo dentro del contenedor (donde se monta tu proyecto local)
  "workspaceFolder": "/app",

  // Configuraciones de personalización específicas de VS Code para este contenedor
  "customizations": {
    "vscode": {
      "settings": {
        // Habilita el servidor de lenguaje de Go para mejorar la experiencia de autocompletado, linting, etc.
        "go.useLanguageServer": true,
        "go.formatTool": "gofmt",
        "go.lintTool": "golint",
        "go.vetOnSave": "package",
        "go.testFlags": ["-v"],
        "terminal.integrated.shell.linux": "/bin/bash",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        // Configuraciones adicionales para mejorar la experiencia de desarrollo
        "go.enableCodeLens": {
          "runtest": true        // Habilita CodeLens para ejecutar pruebas
        },
        "go.inferGopath": false,
        "go.useLanguageServer#": "package",
        "go.testOnSave": true,
        "go.useCodeSnippetsOnFunctionSuggest": true
      },
      "extensions": [
        // Extensiones relacionadas con Go y Docker
        "golang.Go",
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-docker",

        // Extensiones adicionales que solicitaste
        "adamvoss.vscode-languagetool",
        "ahmadawais.shades-of-purple",
        "ancientlord.nightowl-theme",
        "antfu.theme-vitesse",
        "ceciljacob.code-plus-theme",
        "daylerees.rainglow",
        "dbaeumer.vscode-eslint",
        "donjayamanne.githistory",
        "eamodio.gitlens",
        "ekelley.midnight-synth",
        "equinusocio.vsc-material-theme",
        "equinusocio.vsc-material-theme-icons",
        "esbenp.prettier-vscode",
        "fnando.linter",
        "formulahendry.code-runner",
        "github.github-vscode-theme",
        "github.remotehub",
        "github.vscode-pull-request-github",
        "gruntfuggly.todo-tree",
        "henriiik.docker-linter",
        "hoovercj.vscode-settings-cycler",
        "ionutvmi.path-autocomplete",
        "irongeek.vscode-env",
        "jakebathman.mysql-syntax",
        "juanmnl.vscode-theme-1984",
        "mechatroner.rainbow-csv",
        "mrpbennett.atlantic-night",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",
        "ms-vscode.azure-repos",
        "ms-vscode.cpptools-themes",
        "ms-vscode.makefile-tools",
        "ms-vscode.remote-repositories",
        "ms-vscode.wordcount",
        "oderwat.indent-rainbow",
        "premparihar.gotestexplorer",
        "rdebugger.r-debugger",
        "re7rix2.50-shades-of-purple",
        "rebornix.toggle",
        "reditorsupport.r",
        "sldobri.bunker",
        "tabnine.tabnine-vscode",
        "tamasfe.even-better-toml",
        "tomoki1207.pdf",
        "tyriar.vscode-terminal-here",
        "ustymukhman.matrix-theme",
        "viphakorn.mix-night-blue",
        "vscode-icons-team.vscode-icons",
        "yile-ou.paddy-color-theme",
        "zxh404.vscode-proto3"
      ],
      "recommendations": [
        "golang.Go",
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "esbenp.prettier-vscode"
      ]
    }
  },

  // Comando a ejecutar después de que el contenedor ha sido creado
  "postCreateCommand": "go mod tidy && go install golang.org/x/tools/cmd/goimports@latest",

  // Comando a ejecutar cada vez que el contenedor se inicia
  "postStartCommand": "go vet ./... && go test ./...",

  // Puertos expuestos desde el contenedor a la máquina host
  "forwardPorts": [2345, 8080], // Añade otros puertos que necesites, por ejemplo, 8080 para un servidor web

  // Define si los cambios en el código local deben ser aplicados al contenedor en tiempo real
  "mounts": [
    "source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached"
  ],

  // Variables de entorno específicas para el contenedor
  "remoteEnv": {
    "GOPROXY": "https://proxy.golang.org,direct"
  },

  // Definición de configuraciones de depuración de VS Code (opcional)
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:1": {}
  }
}
