{
  "version": "0.2.0",
  "configurations": [
    {
        "name": "Local",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceRoot}/cmd/examples/greeter-client/main.go",
        "envFile": "${workspaceRoot}/config/.env"
    },      
    {
      "name": "Docker",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/app",  // Ruta en el contenedor
      "port": 2345,
      "host": "127.0.0.1",
      "substitutePath": [
          {
              "from": "${workspaceFolder}",
              "to": "/app"
          }
      ],
      "trace": "log", 
      "showLog": false,
      //"postDebugTask": "live reload" // FIXME: no funca el script
   }
  ]
}
