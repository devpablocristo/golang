{
  "version": "0.2.0",
  "configurations": [
    {
        "name": "Local",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceRoot}/examples/greeter-client/main.go",
        "envFile": "${workspaceRoot}/config/.env"
    },
    {
      "name": "Docker A",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/app",  
      "port": 2345,
      "host": "127.0.0.1",
      "substitutePath": [
          {
              "from": "${workspaceFolder}",
              "to": "/app"
          }
      ],
      "trace": "log", 
      "showLog": false
