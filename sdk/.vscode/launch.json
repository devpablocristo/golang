{
  "version": "0.2.0",
  "configurations": [
    {
        "name": "Go App",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceRoot}/services/indi-grpc-server/cmd/main.go",
        "envFile": "${workspaceRoot}/config/.env"
    },
    {
      "name": "DIP Monitor",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceRoot}/services/indi-dip-monitors/cmd/main.go",  // Ruta al archivo que quieres ejecutar
      "args": [
          //"/home/pablo/Projects/Pablo/github.com/devpablocristo/meli/monitor-projects/bueno"
          "/home/pablo/Projects/Pablo/github.com/devpablocristo/meli/monitor-projects/regular"
          //"/home/pablo/Projects/Pablo/github.com/devpablocristo/meli/monitor-projects/malo"
        ],
      "env": {},
      "buildFlags": "",
      "cwd": "${workspaceFolder}",  // Directorio de trabajo
      "stopOnEntry": false,
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Docker A",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/app",  
      "port": 2345,
      "host": "127.0.0.1",
      "substitutePath": [
          {
              "from": "${workspaceFolder}",
              "to": "/app"
          }
      ],
      "trace": "log", 
      "showLog": false
      //"postDebugTask": "live reload" // FIXME: no funca el script
    },
    {
